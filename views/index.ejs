<div class="row row-cols-2 row-cols-lg-6 py-4 g-lg-3" id="catego">
<% if(catego){%>
    <% catego.forEach(function(catego,index){%>
<a href="/<%=catego.name %>" class="col text-center category__link ">
  <div class="category__img shadow">
      <img  src="/image/<%-catego.image%>" alt="america" loading="lazy">
  </div>
  <div class="categoName"><%- catego.name %></div>
</a>
 <%}); %>
<%} %>
</div>


